@model LoginViewModel

@if (@ViewBag.SuccessMessage != null)
{
    <div class="text-center">
        <h1>@ViewBag.SuccessMessage</h1>
    </div>
}

<div class="col-xs-offset-2 col-xs-10 contact-form">
    <article>
        <header>
            <h1>Login</h1>
        </header>
        <div class="entry-content">
            <div role="form">
                <form action="Login" method="post">
                    <div><span asp-validation-summary="All" class="text-danger"></span></div>
                    <p>
                        <div>
                            <label asp-for="UserName">Username</label>
                            <div><span asp-validation-for="UserName" class="text-danger"></span></div>
                        </div>
                        <div>
                            <span><input asp-for="UserName" type="text" size="40"  placeholder="Username"></span>
                        </div>
                    </p>
                    <p>
                        <div>
                            <label asp-for="Password">Password</label><br>
                            <div><span asp-validation-for="Password" class="text-danger"></span></div>
                        </div>
                        <div>
                            <span><input asp-for="Password" type="password" placeholder="Password" /></span>
                        </div>
                    </p>
                    <p><input type="submit" value="Login"></p>
                </form>
            </div>
            <div><small>Don't have an account? <a href="Register">Sign up!</a></small></div>
        </div>
    </article>
</div>