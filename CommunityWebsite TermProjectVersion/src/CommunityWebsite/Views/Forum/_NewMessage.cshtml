@using CommunityWebsite.Models
@model Message

<a class="btn btn-default" href="/Community/Forum" style="margin-bottom:15px;"><i class="fa fa-angle-left"></i> Back To Forum</a>
<div class="post reply new-message">
    <h2 class="headline">New Message</h2>
    <div class="divline"></div>
    <div class="wrap-ut pull-left">
        <div class="userinfo pull-left">
            <div class="avatar">
                <div><i class="user-circle-o"></i></div>
                <div class="status red">&nbsp;</div>
                @*@if (ViewBag.Message.Owner.LoggedIn)
                {
                    <div class="status green">&nbsp;</div>
                    if (ViewBag.Message.Owner.AvatarImg != "")
                    {
                        <img src="~/lib/images/head_shot.jpg" alt="avatar">
                    }
                    <div><i class="user-circle-o"></i></div>
                }
                else
                {
                    <div class="status red">&nbsp;</div>
                }*@
            </div>
        </div>
        <div class="posttext pull-left">
            <form action="/Community/Forum" method="post">
                <div class="row">
                    <div class="col-xs-3">
                        <h2>Subject:</h2>
                    </div>
                    <div class="col-xs-9">
                        <input type="text" name="subject" asp-for="@Model.Subject" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <h2>Topic:</h2>
                    </div>
                    <div class="col-xs-9">
                        <input type="text" name="topic" asp-for="@Model.Topic" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-3">
                        <h2>Message:</h2>
                    </div>
                    <div class="col-xs-9">
                        <textarea rows="6" name="body" asp-for="@Model.Body"></textarea>
                    </div>
                </div>
                <input type="hidden" name="date" asp-for="@Model.Date" value="@DateTime.Now" />
                <input type="hidden" name="owner" asp-for="@Model.Owner" value="" /> @*TODO This should be the person replying to the message, not the message owner*@
                <input type="hidden" name="from" asp-for="@Model.From" value="" />
                <button class="col-xs-3 pull-right submit" type="submit">Post</button>
            </form>
        </div>
    </div>
    <div class="clearfix"></div>
</div>


