    string controller = "";
    if (ViewBag.Title == "Forum")
    {
        controller = "Forum";
    }
    else if (ViewBag.Title == "Blog")
    {
        controller = "Blog";
    }
    else if (ViewBag.Title == "Testimonials")
    {
        controller = "Testimonials";
    }

    string contentClass = "";
